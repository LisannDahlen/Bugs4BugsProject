@model Bugs4Bugs.Views.Account.RegisterVM
@{
    <h1>Register</h1>

     <form asp-controller="Account" asp-action="Register">


        <input class="mb-3" asp-for="FirstName" placeholder="First Name" />
        <br/>
        <input class="mb-3" asp-for="LastName" placeholder="Last Name" />
        <br/>
        <input class="mb-3" asp-for="UserName" placeholder="Username" />
        <br/>
        <input class="mb-3" asp-for="Password" placeholder="Password" />
        <br/>
        <input class="mb-3" asp-for="PasswordRepeat" placeholder="Confirm password" />

        

        
    

        <br />
        <input type="submit" value="Sign me up" />
    </form>
}
