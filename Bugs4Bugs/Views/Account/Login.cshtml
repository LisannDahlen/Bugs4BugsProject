@model LoginVM
@{
    <h1>Sign in</h1>
    <br/>
    <form asp-controller="Account" asp-action="Login">
        
        <input class="mb-3" asp-for="UserName" placeholder ="Username" />
        <br/>
        <input asp-for="Password" placeholder ="Password" />
                 
        <br />
        <input type="submit" value="Log in" />
    </form>
    
}
