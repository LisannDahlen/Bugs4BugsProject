@{

    <div class="accordion" id="accordionExample">

        @{  int i=0;
            foreach (TicketVM ticket in Model){

                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading_@i">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                            <p>@ticket.Title</p>, <p>submitted @ticket.Submitted</p> <br/>
                            <p>@ticket.BugType</p>, <p>@ticket.Urgency</p>, <p>@ticket.Status</p>,  <p>Last updated @ticket.LastUpdated</p>
                        </button>
                    </h2>
                    <div id="collapse_@i" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <p>Submitted by: @ticket.Submiter</p>
                            <p>Product: @ticket.Product</p>
                            <p>Developed by:@ticket.Developer</p>

                            <p><strong>Description:</strong><br/>@ticket.Description</p>
                        </div>
                    </div>
                </div>
            i++;
            }
        }
        


    </div>
}
