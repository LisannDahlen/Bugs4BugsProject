@{


    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Name</th>
                <th>Title</th>
                <th>Bug Type</th>
                <th>Status</th>
                <th>Urgency</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (TicketVM ticket in Model)
                {

                    <tr>
                        <div class="accordion" id="accordionExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading_@i">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                                        @*Skriv det du vill ha i den kolapsade vyn här*@
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@ticket.ProductPhotoURL"
                                     alt=""
                                     style="width: 45px; height: 45px"
                                     class="rounded-circle" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@ticket.Title</p>
                                    <p class="text-muted mb-0">@ticket.Product</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">submitted @ticket.Submitted</p>
                            <p class="text-muted mb-0">Last updated @ticket.LastUpdated</p>
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline">@ticket.BugType</span>
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline">@ticket.Status</span>
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline">@ticket.Urgency</span>
                        </td>


                        </button>
                        </h2>
                        <div id="collapse_@i" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                        @*Skriv det du vill ha i expanderade vyn här*@
                                <p>Submitted by: @ticket.Submiter</p>
                                <p>Product: @ticket.Product</p>
                                <p>Developed by:@ticket.Developer</p>

                                <p><strong>Description:</strong><br />@ticket.Description</p>
                            </div>
                        </div>
                        </div>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>



}
