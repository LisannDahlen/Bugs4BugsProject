@model EditTicketVM

@{
    ViewBag.Title = "Edit Ticket";
}

<br />
<h1 class="text-center">@ViewData["Title"]</h1>
<br />

<div class="container">
    <div class="row">
        <div class="col-xl-4 offset-xl-4 col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12 center-box">
            <div class="card" style="margin-bottom: 50px">
                <div class="card-header">
                    <h6>
                        <img src="/@Model.ProductPhotoURL"
                             alt=""
                             style="width: 45px; height: 45px"
                             class="rounded-circle me-2" />
                        @Model.ProductName
                    </h6>
                </div>
                <div class="card-body">
                    <form class="post-on-enter" asp-route-Id="@Model.Id" asp-controller="Ticket" asp-action="EditTicket">
                        <div class="form-outline mb-3">
                            <!--<label asp-for="Title">Title:</label>-->
                            <!--<input asp-for="Title" placeholder="Title"/>-->
                            <!--<br />-->
                            <P><strong>Topic <br /> @Model.Topic</strong></P>
                        </div>
                        

                        <div class="form-outline mb-3">
                        <select asp-for="SelectedTechnician" asp-items="Model.Technicians" class="form-select">
                        <option value="">-- Select a Technician --</option>

                        </select>

                        </div>

                        <div class="form-outline mb-3">
                        <select asp-for="SelectedStatus" asp-items="Model.Statuses" class="form-select">
                                <option value="">-- Select a status --</option>

                        </select>

                        </div>
                        
                        <div class="form-outline mb-3">
                            <select asp-for="SelectedBugType" asp-items="Model.BugTypes" class="form-select">
                                <option value="">-- Select a bug type --</option>

                            </select>
                        </div>
                        <div class="form-outline mb-3">
                            <select asp-for="SelectedUrgencyLevel" asp-items="Model.UrgencyLevels" class="form-select">
                                <option value="SelectedUrgencyLevel">-- Select an urgency level --</option>

                            </select>
                        </div>
                        <p><strong>Description:</strong> <br /> @Model.Description</p>
                        <input type="submit" value="Submit changes" class="btn btn-primary" />
                    </form>
                    </br>
                    <div asp-validation-summary="All" class="alert @(ViewContext.ModelState.ErrorCount > 0 ? "alert-danger" : "")"></div>
                </div>
            </div>
        </div>
    </div>
</div>
