@model CreateTicketVM

@{
    ViewBag.Title = "Create Ticket";
}

<br />
<h1 class="text-center">@ViewData["Title"]</h1>
<br />

<div class="container">
    <div class="row">
        <div class="col-xl-4 offset-xl-4 col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12 center-box">
            <div class="card" style="margin-bottom: 50px">
                <div class="card-header">
                    <h6>Product: @Model.ProductName</h6>
                </div>
                <div class="card-body">
                    <form asp-controller="Ticket" asp-action="SaveTicket">
                        <div class="form-outline mb-3">
                            <!--<label asp-for="Title">Title:</label>-->
                            <!--<input asp-for="Title" placeholder="Title"/>-->
                            <!--<br />-->
                            <input type="text" id="title" class="form-control" >
                            <label for="title" class="form-label">Title..</label>
                        </div>
                        <div class="form-outline mb-3">
                            <select asp-for="SelectedBugType" class="form-select">
                                <option value="">-- Select a bug type --</option>
                                @foreach (string option in Model.BugTypes)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                        </div>
                        <div class="form-outline mb-3">
                            <select asp-for="SelectedUrgencyLevel" class="form-select">
                                <option value="">-- Select an urgency level --</option>
                                @foreach (string option in Model.UrgencyLevels)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                        </div>
                        <div class="form-outline mb-3">
                            <textarea asp-for="Description" class="form-control border 1px" rows="3" style="background: #FAFAFA"  id="description"></textarea>
                            <label for="description" class="form-label">Description..</label>
                        </div>
                        <input type="submit" value="Add ticket" class="btn btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
