@model CreateTicketVM

@{
    ViewBag.Title = "Create Ticket";
}

<br />
<h1 class="text-center">@ViewData["Title"]</h1>
<br />

<div class="container">
    <div class="row">
        <div class="col-6 offset-md-3 center-box">
            <div class="card">
                <div class="card-header">
                    Create Ticket
                </div>
                <div class="card-body">
                    <form asp-controller="Ticket" asp-action="SaveTicket">
                        <div class="form-group">
                            <label asp-for="ProductName">Product: @Model.ProductName</label>
                        </div>
                        <div class="form-outline mb-3">
                            <label asp-for="SelectedBugType" class="form-label">Bugtypes:</label>
                            <select asp-for="SelectedBugType" class="form-select">
                                <option value="">-- Select a bug type --</option>
                                @foreach (string option in Model.BugTypes)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                        </div>
                        <div class="form-outline mb-3">
                            <label asp-for="SelectedUrgencyLevel" class="form-label">Urgency level:</label>
                            <select asp-for="SelectedUrgencyLevel" class="form-select">
                                <option value="">-- Select an urgency level --</option>
                                @foreach (string option in Model.UrgencyLevels)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                        </div>
                        <div class="form-outline mb-3">
                            <label asp-for="Description" class="form-label">Description:</label>
                            <textarea asp-for="Description" class="form-control border 1px background black" rows="3" style="background: #FAFAFA"></textarea>
                        </div>
                        <input type="submit" value="Add ticket" class="btn btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
