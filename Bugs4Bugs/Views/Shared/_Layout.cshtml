
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bugs4Bugs</title>
    <link rel="icon" href="/Images/bee.png">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gowun+Batang:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css"
          rel="stylesheet" />
    <!--Custom CSS-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body style="background-color: #FFCD29">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
    <div class="d-flex flex-column min-vh-100">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
            <!-- Container wrapper -->
            <div class="container">
                <!-- Navbar brand -->
                <a class="navbar-brand me-2" href="/">
                    <img src="/Images/Bee_font.png"
                         height="auto"
                         alt="BugSmash Logo"
                         loading="lazy"
                         width="140"
                         style="margin-top: -1px;" />
                </a>

                <!-- Toggle button -->
                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarButtons"
                        aria-controls="navbarButtons"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarButtons">
                    <!-- Left links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                     
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="OurMission">Our Mission</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="OurProduct">Our Product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="GetStarted">Get Started</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ticket"  asp-action="ChooseProduct">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ticket" asp-route-prodName="" asp-action="TicketOverview">Tickets</a>
                        </li>
                       
                        @if (User.Identity.IsAuthenticated)
                            {
                            
                             <li class="nav-item">
                            <a class="nav-link" asp-controller="Ticket" asp-action="MyProfile" >My Profile</a>
                        </li>
                            }

                      
                    </ul>
                    <!-- Right links -->
                    <div class="d-flex align-items-center">
                        @if (   User.Identity.IsAuthenticated)
                        {
                            <button type="button" class="btn btn-link px-3 me-2">
                                <a class="nav-link" asp-controller="Account" asp-action="LogOut">Log out</a>
                            </button>

							<label style="text-align:center">Logged in as: @User.Identity.Name</label>



						}
                        else
                        {
                            <button type="button" class="btn btn-link px-3 me-2">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Log in</a>
                            </button>
                            <button type="button" class="btn btn-primary me-3">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </button>
                        }
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="navbarDropdown"
                           role="button"
                           data-mdb-toggle="dropdown"
                           aria-expanded="false" style="padding-left: 20px">
                            <i class="fas fa-user"></i>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" href="#">Action</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Another action</a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Collapsible wrapper end -->
            </div>
            <!-- Container wrapper end -->
        </nav>
        <!-- Navbar end-->


        <main class="container-fluid flex-fill" style="background-color: #FFCD29;display: flex;">
            <div class="container" style="background-color: #FAFAFA;">
                <div class="row">
                    <div class="col-2" style="padding-top: 80px">
                    </div>
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>




        <!-- Footer -->
        <footer class="text-center text-lg-start bg-dark text-muted">
            <!-- Section: Social media -->
            <section class="d-flex justify-content-center justify-content-lg-between p-4">
                <!-- Left -->
                <div class="me-5 d-none d-lg-block">
                    <span>Get connected with us on social networks:</span>
                </div>
                <!-- Left -->
                <!-- Right -->
                <div>
                    <a href="" class="me-4 link-secondary">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="" class="me-4 link-secondary">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="" class="me-4 link-secondary">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="" class="me-4 link-secondary">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="" class="me-4 link-secondary">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="" class="me-4 link-secondary">
                        <i class="fab fa-github"></i>
                    </a>
                </div>
                <!-- Right -->
            </section>
            <!--Divider-->
            <div>
                <hr class="hr hr-blurry white-divider" />
            </div>
            <!-- Section: Social media -->
            <!-- Section: Links  -->
            <section class="">
                <div class="container text-center text-md-start mt-5">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <!-- Content -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                <i class="fas fa-gem me-3 text-secondary"></i>Bugs4Bugs
                            </h6>
                            <p>
                                The solution to all your software bug problems!
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                Menu
                            </h6>
                            <p>
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </p>
                            <p>
                                <a class="nav-link" asp-controller="Home" asp-action="OurMission">Our Mission</a>
                            </p>
                            <p>
                                <a class="nav-link" asp-controller="Home" asp-action="OurProduct">Our Product</a>
                            </p>
                            <p>
                                <a class="nav-link" asp-controller="Home" asp-action="GetStarted">Get Started</a>
                            </p>
                            <p>
                                <a class="nav-link" asp-controller="Ticket" asp-action="ChooseProduct">Products</a>
                            </p>
                            <p>
                                <a class="nav-link" asp-controller="Ticket" asp-action="TicketOverview">Tickets</a>
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                            <h5 class="text-uppercase">
                                <ul class="nav-item">
                                    <a class="nav-link dropdown-toggle"
                                       href="#"
                                       id="navbarDropdown"
                                       role="button"
                                       data-mdb-toggle="dropdown"
                                       aria-expanded="false">
                                        <i class="fas fa-user"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a class="dropdown-item" href="#">Action</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">Another action</a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a class="dropdown-item" href="#">Something else here</a>
                                        </li>
                                    </ul>
                                </ul>
                            </h5>
                           
                               
                                     
                            @if (User.Identity.IsAuthenticated)
                            { <ul class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="LogOut">Logout</a>
                            </ul>}
                            else {
                                 <ul class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </ul>
                            <ul class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </ul>

                            }
                            </ul>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                            <p><i class="fas fa-home me-3 text-secondary"></i> Stockholm, SWEDEN</p>
                            <p>
                                <i class="fas fa-envelope me-3 text-secondary"></i>
                                info@bugs4bugs.com
                            </p>
                            <p><i class="fas fa-phone me-3 text-secondary"></i> + 08-508 290 00</p>
                            <p><i class="fas fa-print me-3 text-secondary"></i> + 08-508 290 40</p>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->
            <div>
                <hr class="hr hr-blurry white-divider" />
            </div>
            <!-- Copyright -->
            <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.025);">
                &copy; 2023 - Bugs4Bugs
                <a href="/privacy">Privacy</a>
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->

    </div>

    <!--Scripts-->
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Add jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
